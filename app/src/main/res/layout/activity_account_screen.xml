<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        style="@style/BottomNavigationViewStyle" />

    <!-- activity_account_screen.xml -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".AccountScreen">

        <!-- First Row -->
        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/nicknameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nickname"/>

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred Play Location"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/followersText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 followers"/>

            <TextView
                android:id="@+id/followingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 following"/>

            <TextView
                android:id="@+id/levelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level: 0"/>
        </LinearLayout>

        <!-- Third Row -->
        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginTop="16dp"/>

        <!-- Fourth Row -->
        <TextView
            android:id="@+id/preferencesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Preferences:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Subsequent Rows for Preferences -->
        <TextView
            android:id="@+id/typeMatchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Preferences"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/handPlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Preferences"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/timeToPlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Preferences"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/courtPositionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Preferences:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/genderToPlayAgainstText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Preferences"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
        <!-- Add your TextViews for each preference here -->

        <!-- Log Out Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_marginTop="16dp"
            android:background="#FF0000"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>