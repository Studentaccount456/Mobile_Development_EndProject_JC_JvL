<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- Gray background color for disabled state -->
            <solid android:color="#A9A9A9" /> <!-- Use your preferred shade of gray -->

            <!-- Black text color for disabled state -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
            <stroke android:width="1dp" android:color="#A9A9A9" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!-- Gray background color for enabled state -->
            <solid android:color="#A9A9A9" /> <!-- Use your preferred shade of gray -->

            <!-- Black text color for enabled state -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
            <stroke android:width="1dp" android:color="#A9A9A9" />
        </shape>
    </item>
</selector>
