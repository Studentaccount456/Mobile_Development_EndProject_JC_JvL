<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- selected state background -->
        </shape>
        <color android:color="#FFFFFF" /> <!-- text color selected state -->
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF600" /> <!-- default state background -->
        </shape>
        <color android:color="#000000" /> <!-- text color default state -->
    </item>
</selector>
