<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Background color -->
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Background color inside the border -->
            <stroke
                android:width="2dp"
                android:color="#FF0000" /> <!-- Border color (red) and width -->
        </shape>
    </item>
</layer-list>
